rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==========================
    // USERS COLLECTION
    // ==========================
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboard, etc.)
      allow read: if true;

      // Only that user can modify their profile
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ==========================
    // EVENTS COLLECTION
    // ==========================
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;

      // Only logged-in users can create events
      allow create: if request.auth != null
        && request.resource.data.user_id == request.auth.uid
        && (request.resource.data.location is latlng || request.resource.data.location == null);

      // Only event owner can update/delete their event
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.user_id;
    }
  }
}
